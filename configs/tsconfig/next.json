{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "@openspace/tsconfig/next",
    "extends": "./base.json",
    "compilerOptions": {
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "allowJs": true,
        "noEmit": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    }
}