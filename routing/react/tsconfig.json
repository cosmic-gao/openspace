{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@openspace/tsconfig/esm",
    "compilerOptions": {
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "types": [
            "node",
            "react"
        ],
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "jsx": "react-jsx"
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}