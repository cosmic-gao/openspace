{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@openspace/tsconfig/vue",
    "compilerOptions": {
        "baseUrl": ".",
        "noEmit": true,
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ]
}